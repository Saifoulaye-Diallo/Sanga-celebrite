{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<div class="container">
    <h1>Inscription ! ✅</h1>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.username,{'label' : "Nom d'utilisateur : ",'attr' : {'placeholder' : "Votre nom d'utilisateur" }}) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.fistname,{'label' : "Nom : ",'attr' : {'placeholder' : "Votre nom" }})  }}
        </div>
            {{ form_row(form.lastname,{'label' : "Prénom : ",'attr' : {'placeholder' : "Votre prénom" }})  }}
        <div class="col-md-4">
        </div>
    </div>
   {{ form_row(form.email ,{'label' : "Email : ",'attr' : {'placeholder' : "Votre email" }}) }}
   {{ form_row(form.password) }}
   <button type="submit" class="btn btn-success mt-2">S'inscrire</button>
   {{ form_end(form) }}
</div>
{% endblock %}
